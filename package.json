{
  "name": "@cucumber/screenplay",
  "version": "1.0.0",
  "description": "Utilities to use screenplay pattern easily with Cucumber",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "dependencies": {},
  "peerDependencies": {
    "@cucumber/cucumber": "^7.0.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "7.3.0",
    "@cucumber/electron": "4.1.1",
    "@cucumber/microdata": "1.5.0",
    "@testing-library/dom": "8.0.0",
    "@testing-library/user-event": "13.1.9",
    "@types/express": "4.17.12",
    "@types/node": "15.12.4",
    "@types/node-fetch": "2.5.10",
    "@types/react": "17.0.11",
    "@types/react-dom": "17.0.8",
    "electron": "13.1.4",
    "express": "4.17.1",
    "node-fetch": "2.6.1",
    "npm-check-updates": "11.7.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "schema-dts": "0.8.3",
    "source-map-support": "0.5.19",
    "ts-node": "10.0.0",
    "typescript": "4.3.4"
  },
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "test": "npm run cucumber-direct && npm run cucumber-http && npm run cucumber-dom",
    "cucumber-direct": "cucumber-js",
    "cucumber-http": "SHOUTY_HTTP_ADAPTERS=1 cucumber-js",
